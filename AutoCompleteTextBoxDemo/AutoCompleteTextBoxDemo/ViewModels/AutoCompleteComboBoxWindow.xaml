<Window x:Class="AutoCompleteTextBoxDemo.ViewModels.AutoCompleteComboBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCompleteTextBoxDemo.ViewModels"
        mc:Ignorable="d"
        
        Title="Окно с демонстрацией AutoComplete используя ComboBox" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <ComboBox 
            Name="combobox"
            Grid.Row="1" 
            Grid.Column="1"
            ItemsSource="{Binding FilteredProducts}"
            DisplayMemberPath="Name" 
            IsEditable="True" 
            Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
            IsTextSearchEnabled="False" 
            StaysOpenOnEdit="True"
            BorderBrush="Gray"
            BorderThickness="1"
            Height="35"
            Width="300"/>
    </Grid>
</Window>
